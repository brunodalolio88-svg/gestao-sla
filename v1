    <script>
        const API_URL = "https://sla-api.brunodalolio88.workers.dev"; 
        let authKey = localStorage.getItem("sla_auth");
        let demandas = []; let historico = []; let myCharts = { sla: null, sub: null };

        // --- INICIALIZAÇÃO ---
        window.onload = () => { 
            lucide.createIcons(); 
            if (authKey) { 
                document.getElementById('tela-login').classList.add('hidden'); 
                document.getElementById('sidebar').classList.remove('hidden');
                document.getElementById('sidebar').classList.add('flex');
                document.getElementById('main-content').classList.remove('hidden');
                loadFromD1(); 
            } 
        };

        // --- LOGIN INTELIGENTE ---
        async function tentarLogin() {
            const u = document.getElementById('login-user').value; const p = document.getElementById('login-pass').value;
            if(!u || !p) return;
            const key = "Basic " + btoa(`${u}:${p}`);
            const res = await fetch(`${API_URL}/list`, { headers: { "Authorization": key.replace("Basic ", "") } });
            if (res.status === 200) { 
                authKey = key.replace("Basic ", ""); localStorage.setItem("sla_auth", authKey); 
                document.getElementById('tela-login').classList.add('hidden'); 
                document.getElementById('sidebar').classList.remove('hidden');
                document.getElementById('sidebar').classList.add('flex');
                document.getElementById('main-content').classList.remove('hidden');
                loadFromD1(); 
            } else { 
                document.getElementById('login-erro').classList.remove('hidden'); 
            }
        }

        function logout() { localStorage.removeItem("sla_auth"); window.location.reload(); }
        
        // --- MODAIS ---
        function openUserModal() { document.getElementById('userModal').classList.remove('hidden'); }
        function closeUserModal() { document.getElementById('userModal').classList.add('hidden'); }
        
        async function cadastrarUsuario() {
            const u = document.getElementById('new-user').value; const p = document.getElementById('new-pass').value;
            await fetch(`${API_URL}/save_user`, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Authorization': authKey }, body: JSON.stringify({ username: u, password: p }) });
            alert("Autorizado!"); closeUserModal();
        }

        // --- DADOS ---
        async function loadFromD1() {
            try {
                const res = await fetch(`${API_URL}/list`, { headers: { "Authorization": authKey } });
                if(res.status === 401) { logout(); return; }
                const data = await res.json();
                demandas = data.filter(d => !d.status_final);
                historico = data.filter(d => d.status_final);
                render();
            } catch (e) { console.error(e); }
        }

        async function saveToD1(item) {
            await fetch(`${API_URL}/save`, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Authorization': authKey }, body: JSON.stringify(item) });
        }

        // --- UPLOAD ---
        document.getElementById('fileInput').addEventListener('change', (e) => {
            const reader = new FileReader();
            reader.onload = async (evt) => {
                const workbook = XLSX.read(evt.target.result, { type: 'binary' });
                const rows = XLSX.utils.sheet_to_json(workbook.Sheets[workbook.SheetNames[0]]);
                const hoje = new Date().setHours(0,0,0,0);
                await fetch(`${API_URL}/clear_active`, { method: 'DELETE', headers: { "Authorization": authKey } });
                const bulk = rows.map(n => ({
                    sla_inicial: parseInt(n.SLA || n.sla || 0), data_referencia: hoje, reqc: String(n.ReqC || n.reqc || ''), 
                    item: String(n.Item || n.item || '1'), nome: n['Nome do Requisitante'] || '', ws: n.WS || '', 
                    subtipo: n.Subtipo || '', texto: n['Texto Breve'] || '', vunit: n['Valor Unitario'] || 0, 
                    vtotal: n['Valor Total RC'] || 0, observacao: n.Observações || ''
                })).filter(d => d.reqc);
                await fetch(`${API_URL}/save_bulk`, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Authorization': authKey }, body: JSON.stringify(bulk) });
                loadFromD1();
            };
            reader.readAsBinaryString(e.target.files[0]);
        });

        const colunas = [{key:'sla',label:'SLA'},{key:'reqc',label:'ReqC'},{key:'item',label:'Item'},{key:'nome',label:'Requisitante'},{key:'ws',label:'WS'},{key:'subtipo',label:'Subtipo'},{key:'texto',label:'Descrição'},{key:'vunit',label:'V. Unit'},{key:'vtotal',label:'V. Total'},{key:'observacao',label:'Obs'}];

        function render() {
            const busca = document.getElementById('inputBusca').value.toLowerCase();
            const corpo = document.getElementById('tabela-corpo');
            const histBody = document.getElementById('tabela-historico');
            
            // Cabeçalho Principal (Estilizado)
            document.getElementById('header-principal').innerHTML = colunas.map(c => `<th class="px-6 py-4">${c.label}</th>`).join('') + '<th class="px-6 py-4 text-center">AÇÕES</th>';
            
            // Cabeçalho Histórico
            document.getElementById('header-historico').innerHTML = `<th class="px-4 py-3">STATUS</th>` + colunas.map(c => `<th class="px-4 py-3">${c.label}</th>`).join('') + '<th class="px-4 py-3 text-center">RESTAURAR</th>';
            
            corpo.innerHTML = ""; histBody.innerHTML = "";
            let counts = { c15:0, c30:0, c60:0, c90:0, c91:0 };

            demandas.forEach((d, idx) => {
                if (busca && !Object.values(d).some(v => String(v).toLowerCase().includes(busca))) return;
                const sla = calcularSlaAtual(d);
                
                // Badges de SLA
                let badgeClass = "bg-blue-100 text-blue-700";
                if (sla > 90) { badgeClass = "bg-purple-100 text-purple-700"; counts.c91++; }
                else if (sla > 60) { badgeClass = "bg-red-100 text-red-700"; counts.c90++; }
                else if (sla > 30) { badgeClass = "bg-orange-100 text-orange-700"; counts.c60++; }
                else if (sla > 15) { badgeClass = "bg-yellow-100 text-yellow-700"; counts.c30++; }
                else { counts.c15++; }

                corpo.innerHTML += `
                <tr class="hover:bg-gray-50 transition-colors border-b border-gray-100 last:border-0">
                    <td class="px-6 py-4"><span class="px-3 py-1 rounded-full text-xs font-bold ${badgeClass}">${sla} dias</span></td>
                    <td class="px-6 py-4 font-bold text-gray-700">${d.reqc}</td>
                    <td class="px-6 py-4">${d.item}</td>
                    <td class="px-6 py-4 text-gray-500">${d.nome}</td>
                    <td class="px-6 py-4 text-gray-500">${d.ws}</td>
                    <td class="px-6 py-4"><span class="text-indigo-600 font-semibold bg-indigo-50 px-2 py-0.5 rounded">${d.subtipo}</span></td>
                    <td class="px-6 py-4 col-texto-breve text-gray-400 text-xs" title="${d.texto}">${d.texto}</td>
                    <td class="px-6 py-4">${fmtMoeda(d.vunit)}</td>
                    <td class="px-6 py-4 font-bold text-gray-700">${fmtMoeda(d.vtotal)}</td>
                    <td class="px-6 py-4 text-gray-400 italic text-xs max-w-[150px] truncate">${d.observacao || '-'}</td>
                    <td class="px-6 py-4">
                        <div class="flex items-center justify-center gap-2">
                            <button onclick="setStatus(${demandas.indexOf(d)}, 'Concluído')" class="p-1.5 rounded-lg bg-green-50 text-green-600 hover:bg-green-100" title="Concluir"><i data-lucide="check" class="w-4 h-4"></i></button>
                            <button onclick="setStatus(${demandas.indexOf(d)}, 'Cancelado')" class="p-1.5 rounded-lg bg-red-50 text-red-600 hover:bg-red-100" title="Cancelar"><i data-lucide="x" class="w-4 h-4"></i></button>
                            <button onclick="openEdit(${demandas.indexOf(d)})" class="p-1.5 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100" title="Editar"><i data-lucide="pencil" class="w-4 h-4"></i></button>
                        </div>
                    </td>
                </tr>`;
            });

            // Renderiza Histórico
            historico.forEach((h, idx) => {
                histBody.innerHTML += `
                <tr class="hover:bg-gray-50 border-b border-gray-100">
                    <td class="px-4 py-3"><span class="text-xs font-bold px-2 py-1 rounded ${h.status_final==='Concluído'?'bg-green-100 text-green-700':'bg-red-100 text-red-700'}">${h.status_final}</span></td>
                    <td class="px-4 py-3 text-gray-500">${h.sla_no_fim}d</td>
                    <td class="px-4 py-3 font-bold">${h.reqc}</td>
                    <td class="px-4 py-3">${h.item}</td>
                    <td class="px-4 py-3">${h.nome}</td>
                    <td class="px-4 py-3">${h.ws}</td>
                    <td class="px-4 py-3">${h.subtipo}</td>
                    <td class="px-4 py-3 text-xs truncate max-w-[100px]">${h.texto}</td>
                    <td class="px-4 py-3">${fmtMoeda(h.vunit)}</td>
                    <td class="px-4 py-3 font-bold">${fmtMoeda(h.vtotal)}</td>
                    <td class="px-4 py-3 text-xs italic text-gray-400">${h.observacao || ''}</td>
                    <td class="px-4 py-3 text-center"><button onclick="reativar(${idx})" class="text-indigo-600 font-bold hover:underline text-xs">REATIVAR</button></td>
                </tr>`;
            });

            // Atualiza Cards do Topo
            document.getElementById('count-15').innerText = counts.c15; 
            document.getElementById('count-30').innerText = counts.c30; 
            document.getElementById('count-60').innerText = counts.c60; 
            document.getElementById('count-90').innerText = counts.c90; 
            document.getElementById('count-91').innerText = counts.c91;
            
            lucide.createIcons();
            updateCharts(counts, demandas); // Atualiza gráficos na tela principal
        }

        // --- GRÁFICOS INTEGRADOS ---
        function updateCharts(counts, data) {
            // Prepara dados subtipo
            const subMap = {};
            data.forEach(d => { const s = d.subtipo || "Não Informado"; subMap[s] = (subMap[s] || 0) + 1; });

            // Gráfico Barras (SLA)
            const ctxSla = document.getElementById('chartSla');
            if(myCharts.sla) myCharts.sla.destroy();
            myCharts.sla = new Chart(ctxSla, {
                type: 'bar',
                data: {
                    labels: ['0-15', '16-30', '31-60', '61-90', '91+'],
                    datasets: [{
                        label: 'Demandas',
                        data: [counts.c15, counts.c30, counts.c60, counts.c90, counts.c91],
                        backgroundColor: ['#3b82f6', '#eab308', '#f97316', '#ef4444', '#9333ea'],
                        borderRadius: 6,
                        barThickness: 30
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, grid: { borderDash: [2, 4] } }, x: { grid: { display: false } } }
                }
            });

            // Gráfico Rosquinha (Subtipos)
            const ctxSub = document.getElementById('chartSubtipo');
            if(myCharts.sub) myCharts.sub.destroy();
            myCharts.sub = new Chart(ctxSub, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(subMap),
                    datasets: [{
                        data: Object.values(subMap),
                        backgroundColor: ['#1e293b', '#6366f1', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#0ea5e9'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '75%',
                    plugins: { legend: { position: 'right', labels: { boxWidth: 10, usePointStyle: true } } }
                }
            });
        }

        // --- PDF ---
        async function gerarPDF() {
            const { jsPDF } = window.jspdf; const pdf = new jsPDF('l', 'mm', 'a4');
            pdf.setFontSize(18); pdf.text("Relatório Executivo de SLA", 15, 15);
            pdf.setFontSize(10); pdf.text("Gerado em: " + new Date().toLocaleDateString(), 15, 22);
            
            // Pega imagem dos gráficos
            const imgSla = document.getElementById('chartSla').toDataURL('image/png', 1.0);
            const imgSub = document.getElementById('chartSubtipo').toDataURL('image/png', 1.0);
            
            pdf.addImage(imgSla, 'PNG', 15, 30, 130, 60); 
            pdf.addImage(imgSub, 'PNG', 160, 30, 120, 60);
            
            pdf.autoTable({ 
                startY: 100, 
                head: [colunas.map(c => c.label)], 
                body: demandas.map(d => [calcularSlaAtual(d)+"d", d.reqc, d.item, d.nome, d.ws, d.subtipo, d.texto.substring(0,30), fmtMoeda(d.vunit), fmtMoeda(d.vtotal), d.observacao]), 
                theme: 'striped',
                headStyles: { fillColor: [30, 41, 59] },
                styles: { fontSize: 7 } 
            });
            pdf.save("Dashboard_SLA.pdf");
        }

        // --- AUXILIARES ---
        function maskMoney(c) { let v = c.value.replace(/\D/g, ""); v = (v/100).toFixed(2); v = v.replace(".", ",").replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1."); c.value = v ? "R$ " + v : ""; }
        function parseNum(t) { return parseFloat(String(t).replace("R$ ", "").replace(/\./g, "").replace(",", ".")) || 0; }
        function fmtMoeda(n) { return "R$ " + Number(n || 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 }); }
        function calcularSlaAtual(item) { const base = parseInt(item.sla_inicial); const v = isNaN(base) ? 0 : base; if (item.sla_no_fim !== undefined) return item.sla_no_fim; return v + Math.floor((new Date().setHours(0,0,0,0) - item.data_referencia) / 86400000); }
        async function setStatus(idx, s) { if(!confirm(`Confirmar status: ${s}?`)) return; let item = demandas[idx]; item.status_final = s; item.sla_no_fim = calcularSlaAtual(item); await saveToD1(item); loadFromD1(); }
        async function reativar(idx) { if(!confirm("Reativar esta demanda?")) return; let item = historico[idx]; item.data_referencia = new Date().setHours(0,0,0,0); item.sla_inicial = item.sla_no_fim; delete item.sla_no_fim; delete item.status_final; await saveToD1(item); loadFromD1(); }

        // --- FORMULARIO SALVAR ---
        document.getElementById('demandaForm').onsubmit = async (e) => {
            e.preventDefault(); const idx = document.getElementById('editIndex').value;
            const data = { 
                sla_inicial: document.getElementById('f-sla').value, data_referencia: idx !== "" ? demandas[idx].data_referencia : new Date().setHours(0,0,0,0), reqc: document.getElementById('f-reqc').value, 
                item: document.getElementById('f-item').value, nome: document.getElementById('f-nome').value, ws: document.getElementById('f-ws').value, subtipo: document.getElementById('f-sub').value, 
                texto: document.getElementById('f-texto').value, 
                vunit: parseNum(document.getElementById('f-vunit').value), vtotal: parseNum(document.getElementById('f-vtotal').value), 
                observacao: document.getElementById('f-obs').value 
            };
            await saveToD1(data); closeModal(); loadFromD1();
        };

        function openAddModal() { document.getElementById('demandaForm').reset(); document.getElementById('editIndex').value = ""; document.getElementById('f-reqc').readOnly = false; document.getElementById('modalTitle').innerText = "Adicionar Demanda"; document.getElementById('formModal').classList.remove('hidden'); }
        function openEdit(idx) { 
            const d = demandas[idx]; document.getElementById('editIndex').value = idx; document.getElementById('modalTitle').innerText = "Editar Demanda";
            document.getElementById('f-sla').value = d.sla_inicial; document.getElementById('f-reqc').value = d.reqc; document.getElementById('f-reqc').readOnly = true;
            document.getElementById('f-item').value = d.item; document.getElementById('f-nome').value = d.nome || ''; document.getElementById('f-ws').value = d.ws || '';
            document.getElementById('f-sub').value = d.subtipo || ''; document.getElementById('f-texto').value = d.texto || '';
            document.getElementById('f-vunit').value = fmtMoeda(d.vunit); document.getElementById('f-vtotal').value = fmtMoeda(d.vtotal);
            document.getElementById('f-obs').value = d.observacao || ''; document.getElementById('formModal').classList.remove('hidden'); 
        }
        function closeModal() { document.getElementById('formModal').classList.add('hidden'); }
        function openArchive() { document.getElementById('archiveModal').classList.remove('hidden'); }
        function closeArchive() { document.getElementById('archiveModal').classList.add('hidden'); }
        
        // Funções para manter compatibilidade com botões antigos que chamei no código novo
        function openCharts() { 
            // Agora os gráficos já estão na tela, mas podemos dar um scroll até eles ou abrir modal se preferir
             document.getElementById('chartModal').classList.remove('hidden'); // Abre modal fullscreen opcional
        } 
        function closeCharts() { document.getElementById('chartModal').classList.add('hidden'); }
    </script>
</body>
